#include <iostream>
#include <vector>
#include <string>
using namespace std;

int main() {
    int n;
    cout << "Ingrese la cantidad de alumnos: ";
    cin >> n;

    vector<string> alumnos(n);
    vector<float> notas(n);

    for (int i = 0; i < n; i++) {
        cout << "Nombre del alumno " << i + 1 << ": ";
        cin >> alumnos[i];

        cout << "Nota de " << alumnos[i] << ": ";
        cin >> notas[i];
    }

    for (int i = 0; i < n - 1; i++) {
        for (int j = 0; j < n - 1 - i; j++) {
            if (notas[j] < notas[j + 1]) {
                float tempN = notas[j];
                notas[j] = notas[j + 1];
                notas[j + 1] = tempN;

                string tempA = alumnos[j];
                alumnos[j] = alumnos[j + 1];
                alumnos[j + 1] = tempA;
            }
        }
    }

    cout << "\nLas tres mejores notas son:\n";
    int limite = (n < 3) ? n : 3;  

    for (int i = 0; i < limite; i++) {
        cout << i + 1 << ") " << alumnos[i] << " - Nota: " << notas[i] << endl;
    }

    return 0;
}

