#include <iostream>
using namespace std;
int main (){
    int n;
    cout <<"Ingresa la cantidad de numeros : "<<endl;
    cin >> n;
    float numeros[n];
    cout <<"ingrese los numeros\n";
    for (int i=0; i<n; i++) {
        cout <<"El elemento["<< i + 1 <<"]:";
        cin >> numeros[i];
    }
    float minimo = numeros[0];
    for (int i=1; i<n; i++) {
        if (numeros[i] < minimo){
            minimo = numeros[i];
        }
    }
    cout<<"el numero minimo es:"<<endl<<minimo;
    return 0;
}
