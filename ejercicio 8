#include <iostream>
#include <vector>
#include <cmath> 
using namespace std;

int main() {
    int n;
    cout << "Ingrese la cantidad de elementos del vector: ";
    cin >> n;

    if (n < 2) {
        cout << "Se necesitan al menos 2 elementos para calcular diferencias." << endl;
        return 0;
    }

    vector<double> A(n);
    cout << "Ingrese los elementos del vector:\n";
    for (int i = 0; i < n; i++) {
        cout << "Elemento[" << i + 1 << "]: ";
        cin >> A[i];
    }

    double maxDiferencia = abs(A[1] - A[0]); 

    for (int i = 1; i < n - 1; i++) {
        double dif = abs(A[i + 1] - A[i]);
        if (dif > maxDiferencia) {
            maxDiferencia = dif;
        }
    }

    cout << "La mayor diferencia entre elementos consecutivos es: " << maxDiferencia << endl;

    return 0;
}
